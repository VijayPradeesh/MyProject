                        <th style="width:10%;">OT Hours</th>
                        <th style="width:10%;">DT Hours</th>
                        <th style="width:10%;">Total Hrs</th>
                    </tr>*@
                    foreach (var payitem in @labor.HoursByPayItem)
                    {
                        <tr>
                            @if (laborrowcount)
                            {
                                laborrowcount = false;
                                <td rowspan="@labor.PayItemCount">
                                    @labor.EmployeeName
                                </td>
                            }
                            <td>@payitem.PayItem</td>
                            <td>@payitem.Town</td>
                            <td>@payitem.StandardHours</td>
                            <td>@payitem.OvertimeHours</td>
                            <td>@payitem.DoubleTimeHours</td>
                            <td>@payitem.TotalHours</td>
                        </tr>

                    }
                }
            }
        </tbody>
